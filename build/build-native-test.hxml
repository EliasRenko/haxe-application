# Copy resources (using --macro to ensure execution)
--macro Sys.command("cmd", ["/c", ".\\bat\\copy-files.bat", ".\\include", ".\\bin\\test\\include"])
--macro Sys.command("cmd", ["/c", ".\\bat\\copy-files.bat", ".\\lib", ".\\bin\\test\\lib"])
--macro Sys.command("cmd", ["/c", ".\\bat\\copy-files.bat", ".\\res", ".\\bin\\test\\res"])
--macro Sys.command("cmd", ["/c", "if not exist bin\\test\\src mkdir bin\\test\\src"])
--macro Sys.command("cmd", ["/c", "copy src\\glad.c bin\\test\\src\\glad.c"])

-cp src 
-cp test
-main test.TestMain
-cpp bin/test

-D HXCPP_DEBUGGER
-D HXCPP_M64
-D HXCPP_CPP11
-D HXCPP_NO_PCH
-D HXCPP_NO_PRECOMPILED_HEADERS
-D no-deprecation-warnings

# Test-specific defines
-D test
-D debug 
-dce std
